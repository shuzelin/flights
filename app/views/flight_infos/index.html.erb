<p id="notice"><%= notice %></p>

<h1>Flight Infos</h1>

<table>
  <thead>
    <tr>
      <th>Filght number</th>
      <th>From city</th>
      <th>To city</th>
      <th>Airline</th>
      <th>Sched</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flight_infos.each do |flight_info| %>
      <tr>
        <td><%= flight_info.filght_number %></td>
        <td><%= flight_info.from_city %></td>
        <td><%= flight_info.to_city %></td>
        <td><%= flight_info.airline_id %></td>
        <td><%= flight_info.sched %></td>
        <td><%= link_to 'Show', flight_info %></td>
        <td><%= link_to 'Edit', edit_flight_info_path(flight_info) %></td>
        <td><%= link_to 'Destroy', flight_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

